<section>
    <summary class="title">
        <%- post.title -%>
    </summary>
    <% if (path == "about/index.html" || path == "life/index.html") { %>

        <% } else {%>
            <div class="date">
                <%- date(post.date, 'ddd YYYY-MM-DD HH:mm') %>
            </div>
            <% }%>
                <p class="sub">
                    <%- post.content -%>
                </p>
                <div class="clearfix">
                    <div class="tags pull-left">
                        <% if (post.tags && post.tags.length) { %>
                            <%- partial('post/tags', {tags: post.tags}) %>
                                <% } %>
                    </div>
                    <div class="share pull-right">
                        <%- partial('post/share') %>
                    </div>
                </div>
                <%- partial('post/license',{at_path: page.permalink}) %>
                    <%- partial('post/comment') %>
</section>